<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".UpOrDeleteActivity">

    <ScrollView
        android:id="@+id/scroll_view_RE"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:adjustViewBounds="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp">

                <TextView
                    android:id="@+id/itemName_RE"
                    android:layout_width="250dp"
                    android:layout_height="30dp"

                    android:textColor="@android:color/black"
                    android:textSize="25dp" />

                <ImageButton
                    android:id="@+id/btn_share_RE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="26dp"
                    android:layout_marginStart="26dp"
                    android:layout_toEndOf="@+id/itemName_RE"
                    android:layout_toRightOf="@+id/itemName_RE"
                    android:layout_weight="3"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/iconshare" />

                <ImageButton
                    android:id="@+id/btn_likeonoff_RE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@+id/btn_share_RE"
                    android:layout_toRightOf="@+id/btn_share_RE"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/likeoff" />
            </RelativeLayout>

            <TextView
                android:id="@+id/itemAddr_RE"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:text="서울시 종로구 삼봉로 71 "
                android:textColor="@android:color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/itemURL_RE"
                android:layout_width="350dp"
                android:layout_height="30dp"
                android:autoLink="web"
                android:linksClickable="true"
                android:text="http://www.shillastay.com/gwanghwamun/index.do "
                android:textColor="@android:color/black"
                android:textSize="15dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/itemStartDate_RE"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="2018.06.03"
                    android:textColor="@android:color/black"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/itemEndDate_RE"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/itemStartDate_RE"
                    android:layout_toRightOf="@+id/itemStartDate_RE"
                    android:layout_weight="1"
                    android:text=" 2018.06.18"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="15dp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/itemPrice_RE"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="0"
                    android:text="가격 : 250,000원"
                    android:textColor="@android:color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/new_itemPrice_RE"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/itemPrice_RE"
                    android:layout_toRightOf="@+id/itemPrice_RE"
                    android:layout_weight="1"
                    android:text="100,000원"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/itemDeadline_RE"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_weight="2"
                    android:text="D-24H"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="15dp" />
            </RelativeLayout>
            <TextView
                android:id="@+id/aboutItem1_RE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="상품 설명"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/aboutItem_RE"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="신라스테이 광화문입니다. 엄청 깨끗해요!!^^"/>
            <!--
            <android.support.constraint.ConstraintLayout
                android:id="@+id/mapview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.constraint.ConstraintLayout>

            <Button
                android:id="@+id/btn_buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@android:color/holo_blue_light"
                android:text="구매하기"
                android:textColor="@android:color/background_light"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
                -->
        </LinearLayout>
    </ScrollView>

    <android.support.constraint.ConstraintLayout
        app:layout_constraintBottom_toBottomOf="@+id/scroll_view_RE"
        android:id="@+id/mapview_RE"
        android:layout_width="match_parent"
        android:layout_height="300dp">

    </android.support.constraint.ConstraintLayout>


    <RelativeLayout
        android:id="@+id/btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <Button
            android:id="@+id/btn_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="83dp"
            android:text="수정하기" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="83dp"
            android:text="삭제하기" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>