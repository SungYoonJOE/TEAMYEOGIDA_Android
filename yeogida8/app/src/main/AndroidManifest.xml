<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hahaj.yeogida8">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 통신 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 사진추가 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- tmap -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".GlobalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 카카오 로그인 -->
        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="@string/kakao_app_key" />
        <!-- 카카오 로그인 -->
        <activity
            android:name="com.kakao.auth.authorization.authcode.KakaoWebViewActivity"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- 카카오 로그인 후 사용자가 이메일을 입력하지 않을 경우 이동 -->
        <activity
            android:name=".InputEmailActivity"
            android:label="이메일 입력 화면">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="메인화면">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 설정화면 -->
        <activity
            android:name=".SettingMainActivity"
            android:label="설정화면">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- '자주하는 질문 및 공지사항' -->
        <activity
            android:name=".NotifyQnAMainActivity"
            android:label="자주하는 질문">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 상품등록 -->
        <activity
            android:name=".RegisterItemActivity"
            android:label="등록화면">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".WebViewActivity" />

        <!-- 상품구매화면 -->
        <activity android:name=".BuyItemActivity">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 상품수정,삭제 -->
        <activity android:name=".UpdateItemActivity">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Sellbuylist_MainActivity" />
        <activity android:name=".Mylist_MainActivity" />
        <activity android:name=".Likedlist_MainActivity" />
        <activity android:name=".Recentlist_MainActivity" />
        <activity android:name=".Search_MainActivity" />
        <activity android:name=".SearchAddrActivity"></activity>
    </application>

</manifest>